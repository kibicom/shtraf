<%= simple_form_for @address, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :address1 %>
  <%= f.input :address2 %>
  <%= f.input :streetid %>
  <%= f.input :cityid %>
  <%= f.input :areaid %>
  <%= f.input :home %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                addresses_path, :class => 'btn' %>
  </div>
<% end %>
